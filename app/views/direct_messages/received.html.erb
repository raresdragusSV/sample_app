<%= render 'menu' %>
<% if @direct_messages %>
  <table class="microposts">
    <% @direct_messages.each do |dm| %>
    <tr>
      <td class="micropost">
        <%= link_to gravatar_for(dm.sender), dm.sender %>
      </td>
      <td class="micropost">
        <span class="user"><%= link_to dm.sender.name, dm.sender %></span>
        <span class="content"><%= dm.content %></span>
        <span class="timestamp"><%= time_ago_in_words(dm.created_at) %> ago.</span>
      </td>
    </tr>
    <% end %>
  </table>
<% end %>

